{
  "targetLanguages": ["en", "ja"],
  "frontmatterKeys": ["title", "description", "tagline"],
  "sourceDir": "src/content/docs",
  "excludeFiles": [
    "404.md",
    "index.mdx"
  ],
  "excludeDirs": [
    "en",
    "ja"
  ],
  "aiProvider": {
    "service": "openrouter",
    "model": "deepseek/deepseek-chat-v3-0324:free",
    "maxTokens": 12800,
    "temperature": 0.1,
    "baseURL": "https://openrouter.ai/api/v1"
  },
  "cache": {
    "enabled": true,
    "cacheDir": "translation-plugin/cache"
  },
  "parallel": {
    "enabled": true,
    "maxConcurrency": 3
  },
  "segmentation": {
    "maxLength": 8000,
    "enabled": true
  },
  "retryConfig": {
    "maxRetries": 3,
    "baseDelay": 1000,
    "maxDelay": 10000
  }
}