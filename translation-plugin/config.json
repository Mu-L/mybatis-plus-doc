{
  "targetLanguages": ["en", "ja"],
  "frontmatterKeys": ["title", "description", "tagline"],
  "sourceDir": "src/content/docs",
  "excludeFiles": [
    "404.md",
    "index.mdx"
  ],
  "excludeDirs": [
    "en",
    "ja"
  ],
  "defaultProvider": "deepseek",
  "aiProviders": {
    "deepseek": {
      "service": "deepseek",
      "model": "deepseek-chat",
      "maxTokens": 8192,
      "temperature": 0.1,
      "baseURL": "https://api.deepseek.com"
    },
    "kimi": {
      "service": "kimi",
      "model": "kimi-k2-0905-preview",
      "maxTokens": 8192,
      "temperature": 0.1,
      "baseURL": "https://api.moonshot.cn/v1"
    },
    "ppio": {
      "service": "ppio",
      "model": "qwen/qwen3-next-80b-a3b-instruct",
      "maxTokens": 8192,
      "temperature": 0.1,
      "baseURL": "https://api.ppinfra.com/openai"
    }
  },
  "cache": {
    "enabled": true,
    "cacheDir": "translation-plugin/cache"
  },
  "parallel": {
    "enabled": true,
    "segmentParallel": false,
    "maxConcurrency": 3
  },
  "segmentation": {
    "enabled": true,
    "maxLength": 8000,
    "maxHeadingLevel": 3
  },
  "retryConfig": {
    "maxRetries": 3,
    "baseDelay": 1000,
    "maxDelay": 10000
  }
}