{
  "_comment": "MyBatis-Plus 文档翻译插件配置示例",
  "targetLanguages": ["en", "ja"],
  "frontmatterKeys": ["title", "description", "tagline"],
  "sourceDir": "src/content/docs",
  "excludeFiles": [
    "404.md",
    "index.mdx"
  ],
  "excludeDirs": [
    "en",
    "ja"
  ],
  "aiProvider": {
    "_comment": "AI 提供商配置",
    "service": "openai",
    "apiKey": "",
    "model": "gpt-4",
    "baseURL": "",
    "maxTokens": 4000,
    "temperature": 0.1,
    "_alternatives": {
      "_comment": "其他可选配置",
      "model_options": ["gpt-4", "gpt-3.5-turbo"],
      "temperature_range": "0.0-1.0 (0.1 推荐用于技术文档)",
      "maxTokens_range": "1000-8000 (根据文档长度调整)"
    },
    "_supported_services": {
      "openai": {
        "models": ["gpt-4", "gpt-3.5-turbo", "gpt-4-turbo"],
        "description": "OpenAI GPT 模型"
      },
      "anthropic": {
        "models": ["claude-3-sonnet-20240229", "claude-3-haiku-20240307", "claude-3-opus-20240229"],
        "description": "Anthropic Claude 模型"
      },
      "google": {
        "models": ["gemini-pro", "gemini-pro-vision"],
        "description": "Google Gemini 模型"
      },
      "groq": {
        "models": ["llama2-70b-4096", "mixtral-8x7b-32768"],
        "description": "Groq 高速推理"
      },
      "ollama": {
        "models": ["llama2", "codellama", "mistral"],
        "description": "本地 Ollama 模型"
      },
      "xai": {
        "models": ["grok-beta"],
        "description": "xAI Grok 模型"
      },
      "deepseek": {
        "models": ["deepseek-chat", "deepseek-coder"],
        "description": "DeepSeek 模型"
      }
    }
  },
  "retryConfig": {
    "_comment": "重试配置",
    "maxRetries": 3,
    "retryDelay": 1000
  },
  "cache": {
    "_comment": "缓存配置",
    "enabled": true,
    "cacheDir": "translation-plugin/cache"
  },
  "parallel": {
    "_comment": "并行处理配置",
    "enabled": true,
    "maxConcurrency": 3
  },
  "_usage_examples": {
    "_comment": "使用示例",
    "basic_translation": "npm run translate",
    "specific_language": "npm run translate:en",
    "dry_run": "npm run translate:check",
    "incremental": "npm run translate:incremental",
    "custom_file": "node scripts/translate.js --file introduce.mdx --lang en"
  },
  "_supported_languages": {
    "en": "English",
    "ja": "Japanese (日本語)",
    "ko": "Korean (한국어)",
    "fr": "French (Français)",
    "de": "German (Deutsch)",
    "es": "Spanish (Español)",
    "pt": "Portuguese (Português)",
    "ru": "Russian (Русский)",
    "ar": "Arabic (العربية)",
    "hi": "Hindi (हिन्दी)"
  }
}