---
// WWAD + Google Adsense Banner
export interface Props {
  showGoogle?: boolean;
}

const {
  showGoogle = false
} = Astro.props;
---

<div class="not-content">
    <!-- WWAD 横幅广告 -->
    <div class="container mx-auto py-6 text-sm leading-6">
        <div class="flex max-w-full wwads-cn wwads-horizontal" data-id="135" style="min-height: 0; margin-top: 0;border-width: 1px; border-radius: 0.5rem"></div>
    </div>
    
    <!-- Google Adsense 横幅广告 -->
    {showGoogle && (
        <div class="container mx-auto py-6 text-sm leading-6">
            <div class="google-ads-banner-frame">
                <ins class="adsbygoogle"
                     style="display:block;width:100%;"
                     data-ad-client="ca-pub-4147143076931995"
                     data-ad-slot="6574899324"
                     data-ad-format="auto"
                     data-full-width-responsive="true"></ins>
                <script is:inline>
                     (adsbygoogle = window.adsbygoogle || []).push({});
                </script>
            </div>
        </div>
    )}
</div>

<style>
  .google-ads-banner-frame {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    min-height: 0;
    padding: 1rem;
    border: 1px solid #e5e7eb;
    border-radius: 0.5rem;
    background-color: #f9fafb;
    overflow: hidden;
  }

  .google-banner-frame .adsbygoogle {
    display: block;
    width: 100%;
  }
</style>
