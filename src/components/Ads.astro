---
// WWAD + Google Adsense 侧边栏广告
export interface Props {
  showGoogle?: boolean;
}

const {
  showGoogle = false
} = Astro.props;
---

<div class="flex xl:flex-col not-content">
  <!-- WWAD 广告 -->
  <div class="w-full xl:flex-1">
    <div class="w-full p-4 text-sm leading-6">
      <div class="wwads-cn wwads-horizontal xl:wwads-vertical max-w-full xl:max-w-[12rem]" data-id="135" style="min-height: 0; margin-top: 0; border-width: 1px; border-radius: 0.5rem"></div>
    </div>
  </div>
  
  <!-- Google Adsense 竖向广告 -->
  {showGoogle && (
    <div class="w-full xl:flex-1">
      <div class="w-full p-4 text-sm leading-6">
        <div class="google-ads-frame">
          <ins class="adsbygoogle"
               style="display:block;width:100%;"
               data-ad-client="ca-pub-4147143076931995"
               data-ad-slot="1866407052"
               data-ad-format="auto"
               data-full-width-responsive="true"></ins>
          <script is:inline>
               (adsbygoogle = window.adsbygoogle || []).push({});
          </script>
        </div>
      </div>
    </div>
  )}
</div>

<style>
  .google-ads-frame {
    width: 100%;
    max-width: 100%;
    min-height: 0;
    margin: 0 auto;
    border: 1px solid #e5e7eb;
    border-radius: 0.5rem;
    background-color: #f9fafb;
    overflow: hidden;
  }

  .google-ads-frame .adsbygoogle {
    display: block;
    width: 100%;
  }

  /* 大屏幕下限制最大宽度，与 WWAD 保持一致 */
  @media (min-width: 1280px) {
    .google-ads-frame {
      max-width: 12rem; /* 约 192px，与 WWAD 的 xl:max-w-[12rem] 一致 */
    }
  }
</style>
